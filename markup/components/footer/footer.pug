include ../logo/logo
include ../menu/menu
include ../callback/callback

mixin footer(data)
    footer.footer
        .footer__content
            .container
                .row.justify-content-between
                    .col-lg-3.col-md-6
                        +logo(data.columns[0].logo)
                        .mt-5
                            +menuFooter(data.columns[1].menu)
                        .mt-5
                            p.pt-3.mb-0
                                !=data.columns[0].description
                    .col-lg-auto.col-md-6.text-right
                        +callback(data.columns[3].callback)(class="text-right")
                        .mt-5
                            +info(data.columns[2].mail)(class="d-block mt-2")
                        .mt-5
                            +info(data.columns[2].address)(class="info_multiline d-block mb-3")
