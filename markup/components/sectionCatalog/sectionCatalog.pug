include ../itemCategory/itemCategory

mixin sectionCatalog(data)
	section.section.section_pt.section-catalog#section-catalog
		.container
			.row.justify-content-center.text-center
				.col-lg-6.col-md-10
					+sectionHeader(data.header)
		.container-fluid
			.row.no-gutters
				each item in data.items
					.col-lg-3.col-md-4.col-sm-6.col-12
						+itemCategory(item)
